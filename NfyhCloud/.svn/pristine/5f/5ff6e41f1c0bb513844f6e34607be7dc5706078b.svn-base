<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_seting_list_sigle"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/relayout_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/img_recdata_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/all_img_cirle_default"
                android:contentDescription="@string/undefind"
                android:scaleType="center"
                android:src="@drawable/h_sbp" />

            <TextView
                android:id="@+id/tv_recdata_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_recdata_until"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/relayout_sign"
            android:layout_marginLeft="-8dp"
            android:layout_toRightOf="@+id/relayout_sign"
            android:text="@string/tz_until_xy"
            android:textColor="@color/darkgray"
            android:textSize="8sp"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_recdata_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/tz_gaoya"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>