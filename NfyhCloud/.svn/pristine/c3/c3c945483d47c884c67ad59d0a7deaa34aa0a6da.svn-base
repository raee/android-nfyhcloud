<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.yixin.nfyh.cloud.ui.DeviceMessageHeadView
            android:id="@+id/view_msg_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:visibility="gone" >

            <Button
                android:id="@+id/btn_signchat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/navbtn_left"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/actionbar_title_tztb" />

            <Button
                android:id="@+id/btn_swdrive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/navbtn_middle"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/switch_dev" />

            <Button
                android:id="@+id/btn_signresult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/navbtn_right"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/access_result" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pb"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ProgressBar
                android:id="@+id/pb_hander"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:max="100"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已接收20%"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_msg_panal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <RelativeLayout
                android:id="@+id/rl_cht_prompt"
                style="@style/setting_default"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:clickable="false"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/img_cht_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/all_img_prompt" />

                <TextView
                    android:id="@+id/tv_cht_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    android:layout_toRightOf="@+id/img_cht_prompt"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tz_panal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_tz_panal_bp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.yixin.nfyh.cloud.widget.SignsItemView
                    android:id="@+id/sign_gaoya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/h_dbp"
                    android:contentDescription="@string/tz_until_xy"
                    android:tag="@string/tz_gaoya" >
                </com.yixin.nfyh.cloud.widget.SignsItemView>

                <com.yixin.nfyh.cloud.widget.SignsItemView
                    android:id="@+id/sign_diya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/h_sbp"
                    android:contentDescription="@string/tz_until_xy"
                    android:tag="@string/tz_diya" >
                </com.yixin.nfyh.cloud.widget.SignsItemView>

                <com.yixin.nfyh.cloud.widget.SignsItemView
                    android:id="@+id/sign_maibo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/h_maibo"
                    android:contentDescription="@string/tz_until_maibo"
                    android:tag="@string/tz_maibo" >
                </com.yixin.nfyh.cloud.widget.SignsItemView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tz_panal_others"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.yixin.nfyh.cloud.widget.SignsItemView
                    android:id="@+id/sign_xueyang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/h_xueyang"
                    android:contentDescription="@string/tz_until_xueyang"
                    android:tag="@string/tz_xueyang" >
                </com.yixin.nfyh.cloud.widget.SignsItemView>

                <com.yixin.nfyh.cloud.widget.SignsItemView
                    android:id="@+id/sign_tiwen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/h_tiwen"
                    android:contentDescription="@string/tz_until_tiwen"
                    android:tag="@string/tz_tiwen" >
                </com.yixin.nfyh.cloud.widget.SignsItemView>

                <com.yixin.nfyh.cloud.widget.SignsItemView
                    android:id="@+id/sign_xuetang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/h_xuetang"
                    android:contentDescription="@string/tz_until_xuetang"
                    android:tag="@string/tz_xuetang" >
                </com.yixin.nfyh.cloud.widget.SignsItemView>
            </LinearLayout>

            <Button
                android:id="@+id/btn_upload_photo"
                style="@style/btn_green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/upload"
                android:textSize="18sp"
                android:visibility="gone" />
        </LinearLayout>

        <ViewStub
            android:id="@+id/viewstub"
            style="@style/width_match"
            android:layout="@layout/acitvity_recdata_result"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>