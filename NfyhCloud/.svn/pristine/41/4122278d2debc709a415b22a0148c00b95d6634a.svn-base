<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_types_item_bg"
    android:gravity="left|center"
    android:orientation="horizontal"
    android:padding="20dp" >

    <ImageView
        android:visibility="gone"
        android:id="@+id/img_ui_sign_detail_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_item_defaut" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_ui_sign_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/xr_notname"
            android:textSize="@dimen/Widget.Light.IOS.Text.SignTitle" />

        <TextView
            android:id="@+id/tv_ui_sign_detail_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_ui_sign_detail_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:shadowColor="@color/lightgray"
        android:shadowDx="2"
        android:shadowDy="2"
        android:text="80"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/green"
        android:textSize="@dimen/Widget.Light.IOS.Text.SignSize"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_ui_sign_detail_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/editcomplete_right" />

</LinearLayout>
