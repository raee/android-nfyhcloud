<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sv_sign_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/ll_sign_detail_bottom"
    android:background="#eeeded"
    android:orientation="vertical"
    android:scrollbars="none" >

    <LinearLayout
        android:id="@id/contentview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_top_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_actionbar_top" />

        <!-- <WebView
            android:id="@+id/webiew_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_actionbar_top" /> -->

        <LinearLayout
            android:id="@+id/ll_ui_sign_detail_head"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_gravity="end"
            android:background="@color/green"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/sign_tag_01" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.yixin.nfyh.cloud.widget.ListView
                android:id="@+id/lv_sign_detail_types"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:listSelector="@drawable/sign_types_item_bg" >
            </com.yixin.nfyh.cloud.widget.ListView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>

