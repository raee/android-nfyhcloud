<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ufset="http://schemas.android.com/apk/res/com.yixin.nfyh.cloud"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    tools:context=".UserFilesActivity" >

    <RelativeLayout
        android:id="@+id/rl_uf_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/tv_ui_sign_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/edit_user_icon"
            android:textColor="@color/gray"
            android:layout_marginLeft="30dp"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/iv_uf_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_launcher" />

        <View
            android:id="@+id/view1"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/iv_uf_header"
            android:background="@color/lightgrey" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_uf_title"
        android:layout_marginTop="22dp"
        android:orientation="vertical"
        android:layout_marginLeft="30dp" >

        <cn.rui.framework.ui.MapItemView
            android:id="@+id/miv_uf_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            ufset:mai_title="@string/user_name" >
        </cn.rui.framework.ui.MapItemView>

        <cn.rui.framework.ui.MapItemView
            android:id="@+id/miv_uf_age"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            ufset:mai_title="@string/user_age" >
        </cn.rui.framework.ui.MapItemView>

        <cn.rui.framework.ui.MapItemView
            android:id="@+id/miv_uf_sex"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            ufset:mai_title="@string/uset_sex" >
        </cn.rui.framework.ui.MapItemView>

        <cn.rui.framework.ui.MapItemView
            android:id="@+id/miv_uf_profession"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            ufset:mai_title="@string/user_profetion" >
        </cn.rui.framework.ui.MapItemView>

        <cn.rui.framework.ui.MapItemView
            android:id="@+id/miv_uf_hospital"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            ufset:mai_title="@string/user_hospital" >
        </cn.rui.framework.ui.MapItemView>

        <cn.rui.framework.ui.MapItemView
            android:id="@+id/miv_uf_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            ufset:mai_title="@string/user_address" >
        </cn.rui.framework.ui.MapItemView>
    </LinearLayout>

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_red"
        android:onClick="quit"
        android:text="退出当前账号" />

</RelativeLayout>