<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="@dimen/Widget.Light.IOS.Button.Radius" />

            <solid android:color="@color/Widget.Light.IOS.Button.Blue.Pressed" />

            <stroke android:color="@color/Widget.Light.IOS.Button.Blue.Pressed" />
        </shape></item>
    <item android:state_enabled="false"><shape android:shape="rectangle">
            <corners android:radius="5dp" />

            <gradient android:angle="0" android:endColor="#999999" android:startColor="#999999" android:type="linear" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="@dimen/Widget.Light.IOS.Button.Radius" />

            <solid android:color="@color/Widget.Light.IOS.Button.Blue.Normal" />

            <stroke android:color="@color/Widget.Light.IOS.Button.Blue.Normal" />
        </shape></item>

</selector>