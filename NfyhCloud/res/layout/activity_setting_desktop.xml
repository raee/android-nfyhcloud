<?xml version="1.0" encoding="utf-8"?>
<com.yixin.nfyh.cloud.ui.ScrollLineLayoutView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:paddingBottom="30dp" >

        <LinearLayout
            style="@style/setting_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal" >

            <TextView
                style="@style/setting_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/setting_desktop_title"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <cn.rui.framework.widget.RuiSwitch
                android:id="@+id/sw_setting_desktop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            style="@style/h4"
            android:layout_width="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_setting_desktop_phone"
            style="@style/setting_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/setting_item_text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/setting_phone" />

            <ImageView
                android:id="@+id/img_xr_webview_loadding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/editcomplete_right" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_setting_desktop_events"
            style="@style/setting_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/setting_item_text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/setting_event" />

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/editcomplete_right" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_setting_desktop_record"
            style="@style/setting_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/setting_item_text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/setting_event_record" />

            <ImageView
                android:id="@+id/ImageView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:src="@drawable/editcomplete_right" />
        </LinearLayout>

    </LinearLayout>

</com.yixin.nfyh.cloud.ui.ScrollLineLayoutView>