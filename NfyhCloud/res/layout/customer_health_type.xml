<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_health_type"
        style="@style/setting_default"
        android:layout_marginBottom="0dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp" >

        <ImageView
            android:id="@+id/img_health_type"
            style="@style/bouth_wrap"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/all_img_cirle_green"
            android:contentDescription="@string/unit"
            android:scaleType="center"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/tv_health_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_health_type"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_health_value"
            style="@style/bouth_wrap"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/green"
            android:textSize="26sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_health_value"
            style="@style/bouth_wrap"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="3"
            android:textColor="@color/green"
            android:textSize="15sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_health_type_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/menu_right" />

        <TextView
            android:id="@+id/tv_health_unit"
            style="@style/bouth_wrap"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/tv_health_value"
            android:textColor="@color/spb_low"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_cht_prompt"
        style="@style/setting_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" 
        android:clickable="false">

<!--         <ImageView -->
<!--             android:id="@+id/img_cht_prompt" -->
<!--             android:layout_width="wrap_content" -->
<!--             android:layout_height="wrap_content" -->
<!--             android:layout_alignParentLeft="true" -->
<!--             android:layout_centerVertical="true" -->
<!--             android:layout_marginLeft="40dp" -->
<!--             android:src="@drawable/icon_true" /> -->

        <TextView
            android:id="@+id/tv_cht_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@+id/img_cht_prompt"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>