<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:baselineAlignBottom="true"
        android:src="@drawable/menu_pop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp"
            android:gravity="center"
            android:background="@drawable/cardlist_middle_background"
            android:orientation="horizontal" >

            <kankan.wheel.widget.WheelView
                android:id="@+id/wv_year"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/base_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="年" />

            <kankan.wheel.widget.WheelView
                android:id="@+id/wv_month"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/base_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="月" />

            <kankan.wheel.widget.WheelView
                android:id="@+id/wv_day"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/base_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="日" />

            <TextView
                android:id="@+id/tv_wv_zhou"
                style="@style/base_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_wv_date_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pop_menu_item_bg"
            android:text="确定" />
    </LinearLayout>

</LinearLayout>