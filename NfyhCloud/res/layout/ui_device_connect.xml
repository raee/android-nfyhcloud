<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_ui_device_connect_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_diable_connect" />

        <ImageView
            android:id="@+id/img_ui_device_connect_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_spinner"
            android:visibility="gone" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ProgressBar
            android:id="@+id/pg_ui_device_connect"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:background="@drawable/progresssape"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/progress_green"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_ui_device_connect_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:drawablePadding="20dp"
            android:gravity="left"
            android:text="@string/tips_connect_bluetooth"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_ui_device_connect"
            style="@style/Theme.IOS.Light.Button.Green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rescan"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
