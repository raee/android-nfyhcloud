<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/contentview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.yixin.nfyh.cloud.ui.TopMsgView
        android:id="@id/msgview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >
    </com.yixin.nfyh.cloud.ui.TopMsgView>

    <com.yixin.nfyh.cloud.ui.InputSignView
        android:id="@+id/sign_alarm_tab"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </com.yixin.nfyh.cloud.ui.InputSignView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_alarm_tab_connet"
            style="@style/btn_green_none_raduis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="连接设备" />

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:alpha="0.5"
            android:background="@color/white" />

        <Button
            android:id="@+id/btn_alarm_tag_upload"
            style="@style/btn_green_none_raduis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="上传" />
    </LinearLayout>

</LinearLayout>