<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_recdata_icon"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/undefind"
            android:scaleType="fitXY"
            android:src="@drawable/bg_actionbar_top" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/common_seting_list_top"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="10dp" >

            <TextView
                style="@style/text_normal_gary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/android_login_username" />

            <EditText
                android:id="@+id/et_login_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="12"
                android:background="@android:color/transparent"
                android:imeOptions="normal"
                android:inputType="textCapCharacters"
                android:maxLength="16"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:singleLine="true" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/common_setting_bottom"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="10dp" >

            <TextView
                style="@style/text_normal_gary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/android_login_password"
                android:textColor="@color/darkgray" />

            <EditText
                android:id="@+id/et_login_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="12"
                android:background="@android:color/transparent"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_login_offline"
                style="@style/btn_green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:text="@string/android_offlinelogin_name" />

            <Button
                android:id="@+id/btn_login"
                style="@style/btn_disable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:enabled="false"
                android:padding="12dp"
                android:text="@string/android_login_name" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_login_qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:src="@drawable/btn_qq_login" />

</RelativeLayout>