<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/item_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tv_view_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:textSize="@dimen/view_item_title_text_size" />

    <TextView
        android:id="@+id/tv_view_item_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:textColor="@color/subtitle"
        android:textSize="@dimen/view_item_subtitle_text_size" />

    <ImageView
        android:id="@+id/img_view_item_allow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:contentDescription="@drawable/ic_launcher"
        android:src="@drawable/arrow_right" />

</LinearLayout>