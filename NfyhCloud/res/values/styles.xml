<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@android:style/Theme.Light.NoTitleBar"></style>

    <style name="nav_top">
        <item name="android:background">@drawable/all_setting_list_center_bg_2</item>
    </style>

    <style name="activity_tv_title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="submenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="ui_device_receive_layout">
        <item name="android:background">#2e7abf</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.IOS.Light" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:actionBarStyle">@style/Widget.IOS.Actionbar</item>
        <item name="android:homeAsUpIndicator">@drawable/abc_ic_ab_back_holo_dark</item>
        <item name="android:selectableItemBackground">@drawable/actionbar_selectable_bg</item>
        <item name="android:windowAnimationStyle">@style/Theme.IOS.Light.Animation</item>
        <!-- 删除Actionbar和activity之间的分割线 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- <item name="android:windowContentOverlay">@drawable/actionbar_overlay</item> -->
    </style>

    <!-- 透明主题 -->
    <style name="Theme.IOS.Light.Transparent" parent="@style/Theme.IOS.Light">
        <item name="android:actionBarTabBarStyle">@style/Widget.IOS.Actionbar.Transparent</item>
        <item name="android:selectableItemBackground">@drawable/actionbar_selectable_bg</item>
        <item name="android:windowContentOverlay">@drawable/actionbar_split</item>
    </style>

    <!-- 默认的操作栏 -->
    <style name="Widget.IOS.Actionbar" parent="@android:style/Widget.ActionBar">
        <item name="android:titleTextStyle">@style/Widget.IOS.Actionbar.Text</item>
        <item name="android:background">@drawable/actionbar_bg_green</item>
    </style>

    <!-- 透明的操作栏 -->
    <style name="Widget.IOS.Actionbar.Transparent" parent="@android:style/Widget.ActionBar">
        <item name="android:titleTextStyle">@style/Widget.IOS.Actionbar.Text</item>
        <item name="android:background">@drawable/actionbar_bg_green</item>
    </style>

    <!-- 活动动画 -->
    <style name="Theme.IOS.Light.Animation">
        <item name="android:activityOpenEnterAnimation">@anim/push_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/push_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/push_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/push_out_right</item>
    </style>

    <style name="Widget.IOS.Actionbar.Text" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.IOS.Light.Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/Widget.Light.IOS.Text.Size</item>
    </style>

    <style name="match_warp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="warp_warp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="list" parent="@style/match_warp">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/list_default_bg</item>
        <item name="android:onClick">onClick</item>
    </style>

    <!-- 带图片的文字 -->
    <style name="default_text_img" parent="@style/warp_warp">
        <item name="android:drawablePadding">15dp</item>
        <item name="android:textColor">#9D9E9E</item>
        <item name="android:textSize">@dimen/default_text_img_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget" />

    <style name="Widget.Light" />

    <!-- IOS主题 -->
    <style name="Widget.Light.IOS" />

    <style name="Widget.Light.IOS.ListItem" parent="@style/match_warp">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="border_width">1dp</item>
        <item name="selected">false</item>
        <item name="enable_right">true</item>
    </style>

    <!-- IOS主题 -->
    <style name="h4" parent="@style/match_warp">
        <item name="android:background">#E5E5E5</item>
        <item name="android:layout_height">3dp</item>
    </style>

    <!-- IOS主题 -->
    <style name="h6" parent="@style/h4">
        <item name="android:layout_height">1dp</item>
    </style>

    <!-- IOS主题 -->
    <style name="setting_item" parent="@style/match_warp">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:background">@drawable/list_default_bg</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- IOS主题 -->
    <style name="setting_item_text">
        <item name="android:textColor">@color/green</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- IOS主题 -->
    <style name="setting_item_text_content" parent="@style/setting_item_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#8D8E8E</item>
    </style>

    <style name="setting_item_text_sub" parent="@style/setting_item_text_content">
        <item name="android:textColor">#84B734</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Light"></style>

    <style name="RuiDialog" parent="@android:style/Theme.Dialog">

        <!-- 是否显示标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否显示遮罩层 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 背景为透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ResultDialog" parent="@android:style/Theme.Dialog">

        <!-- 是否不显示标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否显示遮罩层 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 背景为透明 -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- 左右填充15个像素 -->
    <style name="xr_style_left_right_pading15">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <!-- 宽高填充 -->
    <style name="xr_style_width_height_fill">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="feature_list_item_right_item">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="Theme.Light.Dialog.Bottom" parent="@android:style/Theme.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/DialogAimation</item>
    </style>

    <style name="DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="DialogAimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>

    <style name="base_textview">
        <item name="android:textSize">@dimen/activity_default_text_size</item>
    </style>

    <style name="item_list">
        <item name="android:background">@drawable/item_bg</item>
        <item name="android:padding">15dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="check_style">
        <item name="android:button">@drawable/clock_check_bg</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>