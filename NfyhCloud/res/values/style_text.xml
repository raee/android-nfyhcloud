<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="textbase">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_normal_white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_lager_white">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_normal_gary">
        <item name="android:textColor">@color/darkgray</item>
    </style>

    <style name="text_lager_gary">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/darkgray</item>
    </style>

    <style name="wrap_width_and_height">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="edit_text" parent="wrap_width_and_height">
        <item name="android:background">@drawable/dialog_edit_view_normal</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>