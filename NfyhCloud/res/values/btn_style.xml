<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btn_dialog">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="btn_dialog_default" parent="btn_dialog">
        <item name="android:background">@drawable/btn_dialog_default</item>
    </style>

    <style name="btn_dialog_blue" parent="btn_dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_dialog_blue</item>
    </style>

</resources>